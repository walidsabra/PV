                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Product Visualizer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">


                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Phase/Persona Matrix", "Matrix", "PV_Software")</li>
                    <li>@Html.ActionLink("Search/Filter", "Filter", "PV_Software")</li>

                    <li role="separator" class="divider"></li>

                    <li>@Html.ActionLink("Linker", "Link", "PV_Software")</li>
                    <li role="separator" class="divider"></li>
                </ul>


               
                @*<ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Filter By ... <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Software", "#", "#")</li>
                            <li>@Html.ActionLink("GEO", "#", "#")</li>
                            <li>@Html.ActionLink("Phase", "#", "#")</li>
                            <li>@Html.ActionLink("Persona", "#", "#")</li>
